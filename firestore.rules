// Firestore 보안 규칙
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 사용자 문서 접근 규칙
    match /users/{userId} {
      // 인증된 사용자만 읽기 가능
      allow read: if request.auth != null;
      
      // 자신의 문서만 생성/수정 가능
      allow create: if request.auth != null && 
                    request.auth.uid == userId &&
                    request.resource.data.uid == userId;
      
      // 자신의 문서 수정 또는 관리자가 승인/거부 처리
      allow update: if request.auth != null && (
        // 자신의 문서 수정
        (request.auth.uid == userId && 
         !('status' in request.resource.data.diff(resource.data).affectedKeys()) &&
         !('role' in request.resource.data.diff(resource.data).affectedKeys()) &&
         !('isAdmin' in request.resource.data.diff(resource.data).affectedKeys()) &&
         !('approvedAt' in request.resource.data.diff(resource.data).affectedKeys()) &&
         !('approvedBy' in request.resource.data.diff(resource.data).affectedKeys())) ||
        // 관리자가 승인/거부 처리
        (resource.data.role == 'admin' || resource.data.isAdmin == true)
      );
      
      // 삭제는 관리자만 가능
      allow delete: if request.auth != null && 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 상품 문서 접근 규칙
    match /products/{productId} {
      // 모든 인증된 사용자가 읽기 가능
      allow read: if request.auth != null;
      
      // 관리자만 생성/수정/삭제 가능
      allow create, update, delete: if request.auth != null && 
                                   get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 주문 문서 접근 규칙
    match /orders/{orderId} {
      // 주문자 본인 또는 관리자만 읽기 가능
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      // 승인된 사용자만 주문 생성 가능
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
      
      // 주문자 본인 또는 관리자만 수정 가능
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      // 관리자만 삭제 가능
      allow delete: if request.auth != null && 
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 결제 정보 접근 규칙
    match /payments/{paymentId} {
      // 결제자 본인 또는 관리자만 읽기 가능
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      // 승인된 사용자만 결제 정보 생성 가능
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
      
      // 관리자만 수정/삭제 가능
      allow update, delete: if request.auth != null && 
                           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // 장바구니 접근 규칙
    match /carts/{userId} {
      // 본인의 장바구니만 접근 가능
      allow read, write: if request.auth != null && 
                        request.auth.uid == userId &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }
    
    // 위시리스트 접근 규칙
    match /wishlists/{userId} {
      // 본인의 위시리스트만 접근 가능
      allow read, write: if request.auth != null && 
                        request.auth.uid == userId &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }
    
    // 리뷰 접근 규칙
    match /reviews/{reviewId} {
      // 모든 인증된 사용자가 읽기 가능
      allow read: if request.auth != null;
      
      // 승인된 사용자만 리뷰 작성 가능
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
      
      // 작성자 본인 또는 관리자만 수정/삭제 가능
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
  }
}
